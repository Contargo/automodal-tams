[Unit]
Description=automodal-tams
After=syslog.target

[Service]
Type=simple
WorkingDirectory=/home/automodal-tams/automodal-tams
ExecStartPre=/usr/bin/git checkout export.json
ExecStart=/home/automodal-tams/.local/bin/poetry run sudo python src/tams/main.py -c 127.0.0.1
Environment=PYTHONUNBUFFERED=1
User=automodal-tams
Group=automodal-tams

SyslogIdentifier=automodal-tams
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
